<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employer_report_view_form" model="ir.ui.view">
        <field name="name">employer_report.view.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Report">
                <group>
                    <group>
                        <field name="date_of_birth" required="1"/>
                    </group>
                    <group>
                        <field name="gender" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="download_report" type="object" string="Download Report" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_report_from_employer" model="ir.actions.act_window">
        <field name="name">Employer Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="employer_report_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>