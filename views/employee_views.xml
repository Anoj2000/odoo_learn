<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_company_employer_tree" model="ir.ui.view">
                <field name="name">company.employer.tree</field>
                <field name="model">company.employee</field>
                <field name="arch" type="xml">
                    <tree string="Patients">
                        <field name="name" optional="show"/>
                        <field name="date_of_birth" optional="show"/>
                        <field name="gender" optional="hide"/>
                    </tree>
                </field>
            </record>

            <record id="view_company_employer_form" model="ir.ui.view">
                <field name="name">company.employer.form</field>
                <field name="model">company.employee</field>
                <field name="arch" type="xml">
                    <form string="Employers">
                        <sheet>
                            <group>
                                <group> 
                                    <field name="name" />
                                    <field name="date_of_birth" />
                                </group>
                                <group> 
                                    <field name="gender" />
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

    <record id="action_company_employer" model="ir.actions.act_window">
        <field name="name">Employers</field>
        <field name="res_model">company.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
